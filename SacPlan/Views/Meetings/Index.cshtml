@model IEnumerable<SacPlan.Models.Meeting>

@{
    ViewData["Title"] = "Index";
}

<h1><a href="./" style="font-size:15px;color:#ffffff">Home /</a> Meetings</h1>

<p>
    <a asp-action="Create"  class="accbtn1" >New Meeting</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeetingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Presiding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Benediction)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conductor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Presiding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Benediction)
            </td>
            <td>
                <a asp-action="Edit"  class="accbtn2" asp-route-id="@item.MeetingID">Edit</a> |
                <a asp-action="Details"  class="accbtn2" asp-route-id="@item.MeetingID">Details</a> |
                <a asp-action="Delete"  class="accbtn2" asp-route-id="@item.MeetingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
